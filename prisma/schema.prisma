generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-1.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model post {
  id         Int      @id @default(autoincrement()) 
  title      String   
  message    String   
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model thread {
  id         Int      @id @default(autoincrement()) 
  title      String   
  message    String   
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model user {
  id         Int      @id @default(autoincrement()) 
  username   String   
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}
